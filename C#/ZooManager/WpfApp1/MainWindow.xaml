<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="725">
    <Grid>
        <Label Content="Zoo List" HorizontalAlignment="Left" Margin="123,15,0,0" VerticalAlignment="Top" Width="56"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <ListBox x:Name="ListZoo" VerticalAlignment="Top" HorizontalAlignment="Left" Height="233" Width="138" Margin="82,46,0,0" SelectionChanged="ListZoo_SelectionChanged"/>
        <Label Content="Associated Animals List" HorizontalAlignment="Left" Margin="261,6,0,0" VerticalAlignment="Top" Width="158"  Height="35" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <ListBox x:Name="ListAssociatedAnimals" VerticalAlignment="Top" HorizontalAlignment="Left" Height="233" Width="158" Margin="261,46,0,0" SelectionChanged="ListAssociatedAnimals_SelectionChanged"/>
        <ListBox x:Name="ListAnimals" VerticalAlignment="Top" HorizontalAlignment="Left" Height="342" Width="158" Margin="464,64,0,0" SelectionChanged="ListAnimals_SelectionChanged" />
        <Button x:Name="ButtonDeleteZoo" Content="Delete Zoo" HorizontalAlignment="Left" Margin="82,297,0,0" VerticalAlignment="Top" Width="138" Height="25"  Click="ButtonDeleteZoo_Click"/>
        <Button x:Name="ButtonRemoveAnimal" Content="RemoveAnimal" HorizontalAlignment="Left" Margin="262,297,0,0" VerticalAlignment="Top" Width="156" Height="25" Click="ButtonRemoveAnimal_Click"/>
        <Button x:Name="ButtonDeleteAnimal" Content="Delete Animal" HorizontalAlignment="Left" Margin="464,413,0,0" VerticalAlignment="Top" Width="158" Height="25" Click="ButtonDeleteAnimal_Click"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Margin="82,339,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="337" Height="35" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="ButtonAddZoo" Content="Add Zoo" HorizontalAlignment="Left" Margin="82,382,0,0" VerticalAlignment="Top" Width="138" Height="24"  Click="ButtonAddZoo_Click"/>
        <Button x:Name="ButtonUpdateZoo" Content="Update Zoo" HorizontalAlignment="Left" Margin="82,413,0,0" VerticalAlignment="Top" Width="138" Height="24" Click="ButtonUpdateZoo_Click"/>
        <Button x:Name="ButtonAddAnimal" Content="Add Animal" HorizontalAlignment="Left" Margin="261,382,0,0" VerticalAlignment="Top" Width="158" Height="24" Click="ButtonAddAnimal_Click"/>
        <Button x:Name="ButtonUpdateAnimal" Content="Update Animal" HorizontalAlignment="Left" Margin="261,413,0,0" VerticalAlignment="Top" Width="158" Height="24" Click="ButtonUpdateAnimal_Click"/>
        <Button x:Name="ButtonAddAnimalToZoo" Content="Add Animal to Zoo" HorizontalAlignment="Left" Margin="464,20,0,0" VerticalAlignment="Top" Width="158" Height="24" Click="ButtonAddAnimalToZoo_Click" />

    </Grid>
</Window>
